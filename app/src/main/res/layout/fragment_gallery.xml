<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="6"
    android:background="@color/colorRikazzo"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="115dp"
        android:layout_marginLeft="130dp"
        android:text="Galeria Xiaomi"
        android:textSize="25dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="200dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:text="Home"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="88dp"
            android:layout_height="83dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_home_black_24dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:id="@+id/mia3"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:text="MI A3"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/mi_a3"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="200dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:id="@+id/redminote8"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="REDMI NOTE 8"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="139dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/redmi_note_8"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:id="@+id/redminote9s"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:text="REDMI NOTE 9S"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="178dp"
            android:layout_height="155dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/redmi_note_9s"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view5"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="200dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:id="@+id/mi9"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="MI 9"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="98dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mi_9"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view6"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:id="@+id/mi10"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="MI 10"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="143dp"
            android:layout_height="134dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/mi_10"/>
    </androidx.cardview.widget.CardView>

</GridLayout>